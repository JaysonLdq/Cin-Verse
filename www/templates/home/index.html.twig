{# On recupère notre base #}
{% extends "base.html.twig" %}
{# on peut redefinir le titre de l'onglet #}
{% block title %}
	{{title|default('Nos films & séries')}}

{% endblock %}
{% block body %}
	<div class="film-grid">
    {% for film in films %}
        <div class="film-item">
            <img src="{{ asset('images/movies/' ~ film.imagePath) }}" alt="{{ film.title }}">
            <h2>{{ film.title }}</h2>
            <p>{{ film.description }}</p>
            <p>Durée : {{ film.duration }} minutes</p>
        </div>
    {% else %}
        <p>Aucun film trouvé.</p>
    {% endfor %}
</div>



{% endblock %}
